<body>
  <audio id="backgroundMusic" autoplay loop>
    <source src="22 Taylor.mp3" type="audio/mpeg">
    您的浏览器不支持音频播放。
  </audio>

  <!-- 封面图 -->
  <img id="cover" src="请柬封面.jpg" alt="封面图">

  <!-- 输入框和按钮 -->
  <p>输入你的名字，查看专属请柬！^^</p>
  <input type="text" id="nameInput" placeholder="输入名字">
  <button onclick="showImage()">查看图片</button>

  <!-- 显示结果 -->
  <div class="output">
    <p id="errorMessage" class="error"></p>
    <img id="resultImage" src="" alt="图片会显示在这里">
  </div>

  <script>
    function showImage() {
      // 获取输入的名字
      const nameInput = document.getElementById("nameInput").value.trim();
      
      // 名字和图片路径的映射
      const imageMap = {
        "徐可婧": "徐可婧.jpg",
        "陈依然": "陈依然.jpg",
        "潘美恩": "潘美恩.jpg",
        "王筠": "王筠.jpg",
        "谢逅": "谢逅.jpg",
        "金彦君": "金彦君.jpg",
        "夏天苒": "夏天苒.jpg",
        "唐嘉骐": "唐嘉骐.jpg"
      };

      // 清空错误信息和结果图片
      const errorMessage = document.getElementById("errorMessage");
      const resultImage = document.getElementById("resultImage");
      errorMessage.textContent = "";
      resultImage.src = "";

      // 显示对应的图片或错误信息
      if (imageMap[nameInput]) {
        resultImage.src = imageMap[nameInput];
        resultImage.alt = `${nameInput} 的图片`;
      } else {
        errorMessage.textContent = "未找到对应请柬，请检查输入的名字！";
      }
    }
  </script>
